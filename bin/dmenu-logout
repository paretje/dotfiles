#!/bin/bash
choice=$(echo -e "logout\nshutdown\nreboot\nsuspend\nhibernate" | dmenu)
mod="Control_R"

case "$choice" in
	logout)
		swaymsg exit
		;;
	shutdown)
		if [ -x /usr/bin/nmcli ]; then
			nmcli device | fgrep connected | sed 's/^\([a-z0-9]*\).*/\1/' | xargs nmcli device disconnect
		fi
		if [ -x /bin/systemctl ]; then
			systemctl poweroff
		elif [ -x /bin/loginctl ]; then
			loginctl poweroff
		elif [ -e /etc/runit/stopit ]; then
			sudo init 0
		else
			sudo -- shutdown -h now
		fi
		;;
	reboot)
		if [ -x /usr/bin/nmcli ]; then
			nmcli device | fgrep connected | sed 's/^\([a-z0-9]*\).*/\1/' | xargs nmcli device disconnect
		fi
		if [ -x /bin/systemctl ]; then
			systemctl reboot
		elif [ -x /bin/loginctl ]; then
			loginctl reboot
		elif [ -e /etc/runit/stopit ]; then
			sudo init 6
		else
			sudo -- shutdown -r now
		fi
		;;
	suspend)
		if [ -x /bin/systemctl ]; then
			systemctl suspend
		elif [ -x /bin/loginctl ]; then
			loginctl suspend
		else
			sudo pm-suspend
		fi
		;;
	hibernate)
		if [ -x /bin/systemctl ]; then
			systemctl hibernate
		elif [ -x /bin/loginctl ]; then
			loginctl hibernate
		else
			sudo pm-hibernate
		fi
		;;
esac
