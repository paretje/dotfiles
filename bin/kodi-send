#!/bin/bash -e
host="$1"
user="$2"
password="$3"
url="$4"

if [ "$host" = "" -o "$user" = "" -o "$password" = "" -o "$url" = "" ]; then
	echo "Usage: kodi-send HOST:PORT USER PASSWORD URL" >&2
	exit 1
fi

chronic curl -X POST -H 'Cache-Control: no-cache' -H 'Content-Type: application/json' "http://$user:$password@$host/jsonrpc" -d '{"jsonrpc": "2.0", "method": "Player.Open", "params": {"item": {"file": "plugin://plugin.video.sendtokodi/?'"$url"'"}}, "id": 1}'
